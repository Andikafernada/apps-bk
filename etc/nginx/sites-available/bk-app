server {
    listen 80;
    listen [::]:80;

    server_name domain_atau_ip_server_anda;

    # Root directory for web files
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    # Location block for the Next.js app
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Location block for phpMyAdmin
    location /phpmyadmin {
        index index.php index.html index.htm;
        location ~ ^/phpmyadmin/(.+\.php)$ {
            try_files $uri =404;
            root /usr/share/;
            fastcgi_pass unix:/var/run/php/php8.3-fpm.sock; # <-- PASTIKAN NAMA FILE INI BENAR
            fastcgi_index index.php;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            include fastcgi_params;
        }
        location ~* ^/phpmyadmin/(.+\.(jpg|jpeg|gif|css|png|js|ico|html|xml|txt))$ {
            root /usr/share/;
        }
    }

    # Handle php files in the root directory (optional but good to have)
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.3-fpm.sock; # <-- PASTIKAN NAMA FILE INI BENAR
    }
}
